<h1>Create a new user</h1>

<%= form_with scope: :user, url: users_path, local: true do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>