<h1>All Users</h1>



<table>
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |t| %>
        <tr>
            <td> <%= t.name %></td>
            <td> <%= t.email %></td>
            <td>
                <%= link_to 'Show', user_path(t) %> | 
                <%= link_to 'Delete', user_path(t), method: :delete, data: {confirm: "Are you sure?"} %> | 
                <%= link_to 'Edit', edit_user_path(t)%>
            </td>
        </tr>
         <% end %>
    </tbody>
</table> 
<hr>
<%= link_to 'New User', new_user_path %>