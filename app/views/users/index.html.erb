<h1>All Users</h1>

<div class="apple_pagination">
  <!--
   <div class="page_info">
    <%= page_entries_info @articles %>
  </div>
   -->
  <%= will_paginate @articles, :container => false %>
</div>

<table>
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |t| %>
        <tr>
            <td> <%= t.name %></td>
            <td> <%= t.email %></td>
            <td>
                <%= link_to 'Show', user_path(t) %>
                <% if current_user && (t.name == current_user.name || current_user.admin?)%>
                | <%= link_to 'Delete', user_path(t), method: :delete, data: {confirm: "Are you sure?"} %> | 
                <%= link_to 'Edit', edit_user_path(t)%>
                <% end %>
            </td>
        </tr>
         <% end %>
    </tbody>
</table> 
<hr>
<%= link_to 'New User', signup_path %>